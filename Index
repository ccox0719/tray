<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daily Bible Study</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #f4f4f9;
      color: #333;
    }
    .container {
      max-width: 600px;
      margin: auto;
      background: #ffffff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    h1 {
      text-align: center;
    }
    h2 {
      color: #2c3e50;
    }
    p {
      line-height: 1.6;
    }
  </style>
</head>
<body>
  <div class="container" id="bible-study">
    <h1>Daily Bible Study</h1>
    <h2 id="scripture">Loading...</h2>
    <p id="reflection"></p>
    <p id="prayer"></p>
  </div>
  <script>
    // Fetch the JSON data
    fetch('bible-study.json')
      .then(response => response.json())
      .then(data => {
        // Get today's date
        const today = new Date().toISOString().split("T")[0];

        // Get today's study data
        const study = data[today] || {
          scripture: "No study found for today.",
          reflection: "",
          prayer: ""
        };

        // Display content
        document.getElementById("scripture").textContent = study.scripture;
        document.getElementById("reflection").textContent = study.reflection;
        document.getElementById("prayer").textContent = study.prayer;
      })
      .catch(error => {
        console.error("Error loading Bible study data:", error);
      });
  </script>
</body>
</html>
